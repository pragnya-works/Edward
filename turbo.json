{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "LINEAR_API_KEY",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "NEXT_PUBLIC_BETTER_AUTH_URL",
        "NEXT_PUBLIC_API_URL"
      ]
    },
    "@edward/auth#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET"
      ]
    },
    "api#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "API_URL",
        "EDWARD_API_PORT",
        "NODE_ENV",
        "CORS_ORIGIN",
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "ENCRYPTION_KEY",
        "OPENAI_MODEL",
        "GEMINI_MODEL",
        "REDIS_HOST",
        "REDIS_PORT",
        "AWS_REGION",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_BUCKET_NAME",
        "CLOUDFRONT_DISTRIBUTION_URL",
        "EDWARD_DEPLOYMENT_TYPE",
        "DOCKER_REGISTRY_BASE"
      ]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "dependsOn": ["^build"]
    },
    "api#lint": {
      "dependsOn": ["^build"],
      "env": [
        "EDWARD_API_PORT",
        "NODE_ENV",
        "REDIS_HOST",
        "REDIS_PORT",
        "CORS_ORIGIN",
        "OPENAI_MODEL",
        "GEMINI_MODEL",
        "AWS_BUCKET_NAME",
        "AWS_REGION",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "ENCRYPTION_KEY",
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "CLOUDFRONT_DISTRIBUTION_URL",
        "DOCKER_REGISTRY_BASE"
      ]
    }
  }
}