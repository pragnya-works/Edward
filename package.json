{
  "name": "edward",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ci:local": "NODE_OPTIONS=--no-deprecation pnpm audit --prod --audit-level=high && pnpm turbo typecheck && pnpm turbo lint && pnpm --filter api test:coverage && pnpm turbo build"
  },
  "pnpm": {
    "overrides": {
      "csstype": "^3.2.3",
      "js-yaml": "^4.1.1",
      "tmp": "^0.2.4",
      "esbuild": "^0.25.0",
      "minimatch": "^10.2.1",
      "fast-xml-parser": ">=5.3.6",
      "ajv@^8.0.0": ">=8.18.0",
      "qs": "^6.14.2"
    }
  },
  "devDependencies": {
    "@edward/eslint-config": "workspace:*",
    "@edward/typescript-config": "workspace:*",
    "prettier": "^3.7.4",
    "turbo": "^2.6.3",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
